  if (twCanDebug()) {
    watchdog('thumbwhere_host_role', 'incoming notification.');
  }

  $numargs = func_num_args();
  $arg_list = func_get_args();

  //////////////////////////////////////////////////
  //
  //

  switch ($_SERVER['REQUEST_METHOD']) {

    case 'POST': {
        if ($numargs == 1) {
          if ($arg_list[0] == 'host_role') {

            //
            // Get the POST data as XML
            //

            $post_xml = new SimpleXMLElement('php://input', LIBXML_NOWARNING | (defined('LIBXML_COMPACT') ? LIBXML_COMPACT : 0), true);

            // We expect 'action' as the root element. TODO: I would rather this was the more generic 'request'
            if ($post_xml->getName() != 'action') {
              drupal_add_http_header('Status', '404 not found.');
              print('We were expecting \'action\', as the root element, not \'' . $post_xml->getName() . '\'.');
              exit(0);
            }

            /*
             *  SimpleXMLElement::__set_state(array(
             *      'host_role' =>
             *      SimpleXMLElement::__set_state(array(
             *       '@attributes' =>
             *      array (
             *        'key' => '8e9ff318-3cd7-4593-99de-4c37c0fb335a',
             *        'op' => 'create',
             *      ),
             *    )),
             *  ))
             */


            // We expect 'action' as the root element.
            if (!isset($post_xml->host_role)) {
              drupal_add_http_header('Status', '404 not found.');
              print('We were expecting a \'host_role\', element in the action payload.');
              exit(0);
            }

            // Handle the incoming notification for content ingest
            _thumbwhere_handle_host_role_notify_xml($post_xml->host_role);

          }
          else {
            drupal_add_http_header('Status', '404 not found.');
            print('Invalid resource');
            exit(0);
          }
        }
        else {
          drupal_add_http_header('Status', '404 not found.');
          print('Invalid notification request url format.');
          exit(0);
        }
      }
      break;

    case 'GET': {

        if ($numargs == 1) {

          // If we are returning the index.xml file for the webservice.
          if ($arg_list[0] == 'index.xml') {
            // return index.xml
            drupal_add_http_header('Content-Type', 'text/xml');
