/**
* Implements hook_entity_presave().
*
* Act on an Activity entity before it is about to be created or updated.
*
* @param $entity
*   The entity object.
* @param $entity_type
*   The type of entity being saved (i.e. node, user, comment).
*/
function thumbwhere_activity_entity_presave($entity, $entity_type) {

  // We only look after what we want...
  if ($entity_type == 'thumbwhere_activity')  {

    // If this is new
    if ($entity->is_new) {
  
      // .. then we create a new thumbwhere_activity entity...
      // Instantiate the ThumbWhereContent class

      $twContentAPI = new ThumbWhereAPIContent();

      //if (twCanDebug()) debug($twContentAPI);

      //if (twCanDebug()) debug($entity);

      //
      // Collate and validate our fields
      //

      $fields = array();
      // Compulsory so..
      if (empty($entity->actor)) {
        throw new Exception('actor is compulsory.');
      }
      else {
        $fields['actor'] = $entity->actor;
      }
      // Compulsory so..
      if (empty($entity->action)) {
        throw new Exception('action is compulsory.');
      }
      else {
        $fields['action'] = $entity->action;
      }
      // Compulsory so..
      if (empty($entity->subject)) {
        throw new Exception('subject is compulsory.');
      }
      else {
        $fields['subject'] = $entity->subject;
      }

      // Nullable so we only pass it through to create_activity if we have it..
      if (!empty($entity->fk_place)) {
        $fields['place'] = $entity->fk_place;
      }

      //
      // Now create the Entity in ThumbWhere
      //

      $activity = $twContentAPI->create_activity($context = array(
                  'key' => variable_get('thumbwhere_api_key')
          ), $fields);
            
       if (twCanDebug()) debug($activity);

      //if (twCanDebug()) debug($activity);

      $attributes = $activity->body->activity->attributes();

      if (twCanDebug()) debug('newly created id = ' . $attributes['id']);

      // Assign new id.
      $entity->pk_activity = intval($attributes['id']);

      if (twCanDebug()) debug('$entity->pk_activity = ' . $entity->pk_activity);
    }
    else
    {
        // .. otherwise we calculate the changes and ship them off to thumbwhere
    }
  }
}

