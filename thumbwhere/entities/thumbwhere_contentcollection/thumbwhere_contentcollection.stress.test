class ThumbWhereContentCollectionStressTestCase extends DrupalWebTestCase {

  protected $privileged_user;

  public function getInfo() {
    return array(
        'name' => 'ContentCollection Entity Stress Test',
        'description' => 'Creates ContentCollections in lots of 10, 100, 1000 and outputs the times take and the average rate of creation.',
        'group' => 'ThumbWhereStress',
    );
  }

  public function setUp() {

    // Make sure we are using the testing profile
    $this->profile = 'testing';

    // Enable the module.
    parent::setUp('thumbwhere_contentcollection');

    $this->privileged_user = $this->drupalCreateUser(array());
    $this->drupalLogin($this->privileged_user);
  }

  /**
   * Create 100 contents..
   */
  function testStress100() {

    $n = 100;

    $time_start = microtime(TRUE);



    for ($i = 0; $i < $n; $i++) {

      $entity = entity_create('thumbwhere_contentcollection', array(
          'name' => $this->randomName(),
          'uid' => $this->privileged_user->uid
      ));

      $entity->save();

    }

    $time_end = microtime(TRUE);
    $time = $time_end - $time_start;

    $result = TRUE;
    $message = t("Created $n ContentCollections in $time seconds = " . $n / $time . ' contents per second.');

    if (function_exists('drush_log')) {
      drush_log($message, 'metric');
    }

    $this->assertTrue($result, $message);



  }


