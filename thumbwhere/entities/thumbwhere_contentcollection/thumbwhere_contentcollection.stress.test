    $total = 0;
   

    for ($i = 0; $i < $n; $i++) {

      $entity = _thumbwhere_stresstest_create_ContentCollection($this->privileged_user->uid,$this);
	
      if ($entity == null) {
        break;
      }
	  

      $entity->save();
      
      $total++;

