      $trophy = $twContentAPI->create_trophy($context = array(
                  'key' => variable_get('thumbwhere_api_key')
          ), $fields);
            
       if (twCanDebug()) debug($trophy);

      //if (twCanDebug()) debug($trophy);

      $attributes = $trophy->body->trophy->attributes();

      if (twCanDebug()) debug('newly created id = ' . $attributes['id']);

      // Assign new id.
      $entity->pk_trophy = intval($attributes['id']);

      if (twCanDebug()) debug('$entity->pk_trophy = ' . $entity->pk_trophy);
