  if ($entity_type == 'thumbwhere_trophy')  {

    // If this is new
    if ($entity->is_new) {
  
      // .. then we create a new thumbwhere_trophy entity...
      // .. then we create a new thumbwhere_Trophy entity...
      // Instantiate the ThumbWhereContent class

      $twContentAPI = new ThumbWhereAPIContent();

      //if (twCanDebug()) debug($twContentAPI);

      //if (twCanDebug()) debug($entity);

      //
      // Collate and validate our fields
      //

      $fields = array();
      // Compulsory so..
      if (empty($entity->singleton)) {
        throw new Exception('singleton is compulsory.');
      }
      else {
        $fields['singleton'] = $entity->singleton;
      }
      // Compulsory so..
      if (empty($entity->name)) {
        throw new Exception('name is compulsory.');
      }
      else {
        $fields['name'] = $entity->name;
      }

      //
      // Now create the Entity in ThumbWhere
