/**
* Implements hook_entity_presave().
*
* Act on an Actor entity before it is about to be created or updated.
*
* @param $entity
*   The entity object.
* @param $entity_type
*   The type of entity being saved (i.e. node, user, comment).
*/
function thumbwhere_actor_entity_presave($entity, $entity_type) {

  // We only look after what we want...
  if ($entity_type == 'thumbwhere_actor')  {

    // If this is new
    if ($entity->is_new) {
  
      // .. then we create a new thumbwhere_actor entity...
      // Instantiate the ThumbWhereContent class

      $twContentAPI = new ThumbWhereAPIContent();

      //if (twCanDebug()) debug($twContentAPI);

      //if (twCanDebug()) debug($entity);

      //
      // Collate and validate our fields
      //

      $fields = array();

      // Nullable so we only pass it through to create_actor if we have it..
      if (!empty($entity->fk_member)) {
        $fields['member'] = $entity->fk_member;
      }
      // Compulsory so..
      if (empty($entity->identity)) {
        throw new Exception('identity is compulsory.');
      }
      else {
        $fields['identity'] = $entity->identity;
      }

      // Nullable so we only pass it through to create_actor if we have it..
      if (!empty($entity->fk_producer)) {
        $fields['producer'] = $entity->fk_producer;
      }

      // Nullable so we only pass it through to create_actor if we have it..
      if (!empty($entity->fk_consumer)) {
        $fields['consumer'] = $entity->fk_consumer;
      }

      //
      // Now create the Entity in ThumbWhere
      //

      $actor = $twContentAPI->create_actor($context = array(
                  'key' => variable_get('thumbwhere_api_key')
          ), $fields);
            
       if (twCanDebug()) debug($actor);

      //if (twCanDebug()) debug($actor);

      $attributes = $actor->body->actor->attributes();

      if (twCanDebug()) debug('newly created id = ' . $attributes['id']);

      // Assign new id.
      $entity->pk_actor = intval($attributes['id']);

      if (twCanDebug()) debug('$entity->pk_actor = ' . $entity->pk_actor);
    }
    else
    {
        // .. otherwise we calculate the changes and ship them off to thumbwhere
    }
  }
}

