      //if (twCanDebug()) debug($like);

      $attributes = $like->body->like->attributes();

      if (twCanDebug()) debug('newly created id = ' . $attributes['id']);

      // Assign new id.
      $entity->pk_like = intval($attributes['id']);

      if (twCanDebug()) debug('$entity->pk_like = ' . $entity->pk_like);
    }
